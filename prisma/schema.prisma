generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  password  String?
  avatarUrl String?
  provider  Provider
  role      Role

  posts Post[]

  @@map("users")
}

model Post {
  id       String  @id @default(uuid())
  title    String
  content  String
  imageUrl String?
  imageFileId String?
  likes    Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("posts")
}

enum Provider {
  Google
  Credentials
  Github
}

enum Role {
  Admin
  User
}
